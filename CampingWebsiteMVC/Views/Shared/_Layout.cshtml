<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOALMA Camping</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/CampingWebsiteMVC.styles.css" asp-append-version="true" />
    <!-- bootstrap links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- bootstrap links -->
    <!-- fonts links -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <!-- fonts links -->
</head>
<body>
    <header>
        <!-- top navbar -->
        <div class="top-navbar">
            <p>WELCOME</p>
            <div class="icons">
                <a href="@Url.Action("Login", "Account")"><img src="~/Images/register.png" alt="" width="18px">LOGIN</a>
                <a href="@Url.Action("Register", "Account")"><img src="~/Images/register.png" alt="" width="18px">REGISTER</a>
            </div>
        </div>
        <!-- top navbar -->
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg" id="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" id="logo"><span id="span1">B</span>O<span id="span1">A</span>L<span id="span1">M</span>A <span>Camping</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span><img src="~/Images/menu.png" alt="" width="30px"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Category
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: rgb(53, 137, 70);">
                                <li><a class="dropdown-item" href="#Tents">Tents</a></li>
                                <li><a class="dropdown-item" href="#Sleepingbags">Sleeping Bags</a></li>
                                <li><a class="dropdown-item" href="#SleepingMats">Sleepmats</a></li>
                                <li><a class="dropdown-item" href="#BiviBags">Bivi Bags & Shelters</a></li>
                                <li><a class="dropdown-item" href="#DryBags">Stuff Sacs & Dry Bags</a></li>
                                <li><a class="dropdown-item" href="#Multitools">Multitools & Knives</a></li>
                                <li><a class="dropdown-item" href="#StovesPots">Stoves & Pots</a></li>
                                <li><a class="dropdown-item" href="#Headtorches">Headtorches</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex" id="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
        <!-- navbar -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- footer -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>BOALMA Camping</h3>
                        <p>
                            Dublin <br>
                            Cork <br>
                            Galway <br><br>
                        </p>
                        <strong>Phone:</strong> +353 1 4689729 <br>
                        <strong>Email:</strong> info@boalmacamping.ie <br>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><a href="~/index.html">Home</a></li>
                            <li><a href="~/about.html">About Us</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">Terms of service</a></li>
                            <li><a href="#">Unsubscribe</a></li>
                        </ul>
                    </div>


                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Help</h4>

                        <ul>
                            <li><a href="#offer">Shopping Guide</a></li>
                            <li><a href="#">Product Care</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Return Process</a></li>
                            <li><a href="~/contact.html">Contact Us</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Our Social Networks</h4>
                        <p>Follow us on....</p>

                        <div class="socail-links mt-3">
                            <a href="#"><i class="fa-brands fa-twitter"></i></a>
                            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#"><i class="fa-brands fa-skype"></i></a>
                            <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="container py-4">
            <div class="container">
                &copy; 2023 - CampingWebsiteMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="copyright">
                &copy; @DateTime.Now.Year Copyright <strong><span>BOALMA Camping</span></strong>.
                All Rights Reserved
            </div>
            <div class="credits">
                Designed by <a href="#">Bo Al Ma</a>
            </div>
        </div>
    </footer>
    <!-- footer -->


    <a href="#" class="arrow"><i><img src="./images/arrow.png" alt=""></i></a>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>